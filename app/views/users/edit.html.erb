<%= error_messages_for :user %>

<h3><%= @user.full_name %> (<%= @user.login %>), ваш профайл в ваших руках</h3>
<% form_for(@user, :url => user_path(@user)) do |f| %>

  <p><label for="first_name">Имя</label> <strong class="required">*</strong><br/>
  <%= f.text_field :first_name %></p>

  <p><label for="last_name">Фамилия</label> <strong class="required">*</strong><br/>
  <%= f.text_field :last_name %></p>

  <p><label for="country">Страна</label> <strong class="required">*</strong><br/>
  <%= f.country_select :country, ['Belarus', 'Ukraine', 'Russia'] %></p>

  <p><label for="city">Населенный пункт</label> <strong class="required">*</strong><br/>
  <%= f.text_field :city %></p>

  <p><label for="location">Место работы/учебы и сфера деятельности</label> <strong class="required">*</strong><br/>
  <%= f.text_field :occupation %></p>

  <p><label for="projects">Проекты Free Software / Open Source (FS/OS), в которых вы принимали
и/или принимаете участие и ваша роль в них</label><br/>
  <%= f.text_area :projects %></p>

  <p><label for="password">Пароль</label> <strong class="required">*</strong><br/>
  <%= f.password_field :password %></p>

  <p><label for="password_confirmation">Подтвержедние пароля</label> <strong class="required">*</strong><br/>
  <%= f.password_field :password_confirmation %></p>

  <p> Поля обозначенные красной звездочкой (<strong class="required">*</strong>) обязательны для заплонения
  </p>


  <p><%= submit_tag 'Сохранить изменения' %></p>
<% end %>
