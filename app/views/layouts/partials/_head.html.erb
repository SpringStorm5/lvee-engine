<%# Page header, it's common for all pages-%>
<head>
  <meta http-equiv="Content-Type" content="application/xhtml+xml; charset=utf-8" />
  <title><%= page_title %></title>
  <meta name="keywords" content="<%= @metainfo.keywords %>" />
  <meta name="description" content="<%= @metainfo.description %>" />

  <%= stylesheet_link_tag "blueprint/screen" %>
  <%= stylesheet_link_tag "blueprint/print", :media => "print" %>
  <%= stylesheet_link_tag "style" %>
  <%= stylesheet_link_tag "style", :media => "print" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "admin" if admin?%>

  <%= auto_discovery_link_tag(:rss, rss_news_items_path) %>

  <%= csrf_meta_tag %>

  <!--[if lte IE 6]>
  <script type="text/javascript" src="/djs/ie_fuck.js"></script>
  <![endif]-->
</head>
