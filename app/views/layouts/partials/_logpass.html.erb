<% unless logged_in? %>
  <div class="logpass" >
    <div>
      <% form_tag session_path do -%>
      <%= t('label.session.login') %>: <input type="text" name="login"/>&nbsp;&nbsp;&nbsp;
      <%= t('label.session.password') %>: <input type="password" name="password" />&nbsp; &nbsp;
      <%= submit_tag t('label.session.loginButton'), :class => 'log-button' %>
    <% end %>
    </div>

    <%= link_to t('label.user.register'), new_user_path %>
  </div>
<% else %>
  <div class="logpass" >
    <%= t('message.session.logged', :user_name => link_to(current_user.login, user_path(:id=>current_user.id))) %> |
    <%= link_to t('label.session.logout'), session_path, :method => :delete %>
  </div>
<% end %>
