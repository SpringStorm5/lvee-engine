<% sponsors = Sponsor.list %>
<ul class="friends">
  <% SPONSOR_TYPES.each do |type| -%>
    <li class="friend">
      <%= link_to(t("sidebar.#{type[1]}"), article_by_name_path(:category => "sponsors", :name => "index"),
        :class => 'friend-header') %>
      <ul>
        <%= render :partial => "layouts/partials/sponsor", :collection => sponsors[type[0]] %>
      </ul>
    </li>
  <% end -%>
</ul>
