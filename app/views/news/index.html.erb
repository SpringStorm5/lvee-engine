<%= flashes_if_any %>

<h1><%= t('label.news.last_news')%></h1>

<% for news in @news %>
  <h2><%= link_to(h(news.title), news_item_path(:id => news.id)) %></h2>
  <%= textilize(news.lead) %>

  <%= news.user.full_name %>

  <%= render(:partial => 'news/editor_actions', :locals => {:news => news}) if editor? -%>
  <hr />
<% end %>


<% if editor? %>
<%= link_to t('label.news.add'), new_news_item_path %>
<% end %>
