<h1>Создаем новость</h1>

<%= error_messages_for :news %>

<% form_for(@news, :url => news_item_path(@news) ) do |f| %>
  <p>
    <b>Заголовок</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Лид</b><br />
    <%= f.text_area :lead %>
  </p>

  <p>
    <b>Текст</b><br />
    <%= f.text_area :body %>
  </p>


  <p>
    <b>Публиковать</b><br />
    <%= f.check_box :published %>
  </p>

  <p>
    <%= f.submit "Сохранить" %>
  </p>
<% end %>

<%= link_to 'К списку новостей', news_path %>
