<h1><%= @news.parent_id ? t('label.news.translating') : t('label.news.creating')%></h1>

<%= error_messages_for :news %>

<div id="preview_place"> </div>

<%= form_for(@news, :url => news_item_index_path(:lang => params[:lang]) ) do |f| %>
  <%= render :partial => "/news/form", :locals => {:f => f} %>
  <p>
    <%= f.submit t('label.common.preview'), "data-remote-preview" => true,
      "data-update" => 'preview_place', "data-url" => preview_news_item_index_url, "data-method" => "PUT" %>
    <%= f.submit t('label.common.save') %>
  </p>
<% end %>

<%= link_to t('label.news.back_to_list'), news_item_index_path(:lang => params[:lang]) %>
