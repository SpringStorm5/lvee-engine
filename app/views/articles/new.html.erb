<h1><%= t('label.article.creating') %></h1>

<div id="preview_place"> </div>

<%= form_for(@article, :url => articles_path(:lang => params[:lang])) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "/articles/form" , :locals => {:f => f}%>

  <%= f.hidden_field :locale %>

  <p>
    <%= f.submit t('label.common.preview'), "data-remote-preview" => true,
      "data-update" => 'preview_place', "data-url" => preview_articles_url, "data-method" => "PUT" %>
    <%= f.submit t('label.common.create') %>
  </p>
<% end %>

<%= link_to t('label.common.back'), articles_path(:lang => params[:lang]) %>
