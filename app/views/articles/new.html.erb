<h1><%= t('label.article.creating') %></h1>

<% form_for(@article, :url => articles_path) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form" , :locals => {:f => f}%>

  <%= f.hidden_field :locale %>

  <p>
    <%= f.submit t('label.common.create') %>
  </p>
<% end %>

<%= link_to t('label.common.back'), articles_path %>
