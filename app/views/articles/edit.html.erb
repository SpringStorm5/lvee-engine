<h1><%= t('label.article.editing') %></h1>

<div id="preview_place"> </div>

<%= form_for(@article, :url => article_path(:id => @article.id, :lang => params[:lang])) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => "/articles/form" , :locals => {:f => f}%>

  <p>
    <%= f.submit t('label.common.preview'), "data-remote-preview" => true,
      "data-update" => 'preview_place', "data-url" => preview_articles_url(:lang => params[:lang]), "data-method" => "PUT" %>
    <%= f.submit t('label.common.update') %>
  </p>
<% end %>

<%= link_to t('label.common.back'), articles_path(:lang => params[:lang]) %>
