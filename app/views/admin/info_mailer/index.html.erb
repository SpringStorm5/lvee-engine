<h1>Mailer</h1>
<%= form_tag({:action => "send_mail"}, :multipart => true) do -%>
  <p><label to="to">To:</label>
    <% if @to_list.empty? -%>
      <%= text_field_tag "to", @to %>
    <% else -%>
      <%= hidden_field_tag "to_list", @to_list.join(",") %>
    <ul>
      <% @to_list_users.each do |u| %>
        <li><%= h u.full_name %> &lt;<%= h u.email %>&gt;</li>
      <% end -%>
    </ul>
  <% end -%>
  </p>
  <p><label to="subject">Subject:</label>
    <%= text_field_tag "subject", params[:subject] %></p>

  <p><label to="body">Body:</label>
    <%= text_area_tag "body", params[:body], :cols => 80, :rows => 20 %></p>
  <p><label to="attachment">Attachment:</label>
    <%= file_field_tag "attachment" %></p>
  <%= submit_tag "Send" %>
<% end -%>
