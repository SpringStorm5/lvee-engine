<h1><%= h @conference.name %></h1>

<table class="data participants">
  <tr>
    <th><%= t('label.user.photo') %></th>
    <th><%= t('label.user.full_name') %></th>
    <th><%= t('label.user.from') %></th>
    <th><%= t('label.user.projects') %></th>
    <th><%= t('label.conference_registration.proposition_list') %></th>
  </tr>
  <% @registrations.each_with_index do |reg, i| -%>
    <tr class="<%= i % 2 == 1 ? 'odd' : 'even'%>">
      <% image_path = reg.user.avator.url ? reg.user.avator.list.url : nil %>
      <td><%= image_tag(image_path) if image_path %></td>
      <td><%= h reg.user.full_name %></td>
      <td><%= h reg.user.country %>, <%= h reg.user.city %></td>
      <td><%= simple_format(strip_urls(reg.user.projects))%></td>
      <td><%= simple_format(strip_urls(reg.proposition))%></td>
    </tr>
  <% end -%>
</table>
<p />
<div class="js-kit-comments" permalink="" uniq="<%= @metainfo.page %>"></div><script src="http://js-kit.com/for/lvee.org/comments.js"></script>
