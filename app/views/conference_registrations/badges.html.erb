<h1><%= t("label.conference_registration.badges_title", :conference => @conference.name) %></h1>

<% form_tag badges_user_conference_registration_path() do -%>
<div id="badges">
<% @badges.each do |badge| -%>
  <div class="badge">
    <%= text_field_tag "badges[][tags]", badge.tags, :class=> "tags" %>
    <%= text_field_tag "badges[][top]", badge.top, :class=> "top" %>
    <%= text_field_tag "badges[][bottom]", badge.bottom, :class=> "bottom" %>
  </div>
<% end -%>
</div>

<%= submit_tag t('label.common.save')%>
<% end -%>
