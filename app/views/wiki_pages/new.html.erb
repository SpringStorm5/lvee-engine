<h1><%= t('label.wiki_page.creating') %></h1>

<div id="preview_place"> </div>

<%= form_for(@wiki_page, :url => wiki_pages_path(:lang => params[:lang])) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "/wiki_pages/form" , :locals => {:f => f}%>

  <p>
    <%= f.submit t('label.common.preview'), "data-remote-preview" => true,
      "data-update" => 'preview_place', "data-url" => preview_wiki_pages_url, "data-method" => "PUT" %>
    <%= f.submit t('label.common.create') %>
  </p>
<% end %>

<%= link_to t('label.common.back'), wiki_pages_path(:lang => params[:lang]) %>
